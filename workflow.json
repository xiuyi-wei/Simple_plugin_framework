{
  "final_key": "final_report",
  "vars": {
    "base_dir": "./workspace"
  },
  "tasks": [
    {
      "id": "create_dirs",
      "type": "Shell",
      "script_path": "./scripts/create_dirs.sh",
      "args": [
        { "value": "{base_dir}",      "filters": ["abspath"] },             
        { "value": "{base_dir}/sub",  "filters": ["abspath"] },             
        { "value": "flag.txt",        "filters": [] }                      
      ],
      "out_key": "created_flag",
      "out_value": "{base_dir}/sub/flag.txt",
      "check_exists": true
    },
    {
      "id": "monitor_perf",
      "type": "Shell",
      "script_path": "./scripts/monitor_perf.sh",
      "args": [
        { "value": "engine_app", "filters": [] }                            
      ],
      "out_key": "perf_log",
      "out_value": "data/perf.log",
      "check_exists": false
    }
  ],
  "edges": [
    ["create_dirs", "monitor_perf"]
  ]
}
